{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": "./",
  "testRegex": ".spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "test/**/*.service.ts" 
  ],
  "testPathIgnorePatterns": [
    "test/model/",
    "test/utils/"
  ],
  "coverageDirectory": "coverage",
  "clearMocks": true,
  "bail": true,
  "verbose": false,
  "collectCoverage": true,
  "testEnvironment": "node",
  "coverageThreshold": {
    "global": {
      "branches": 0,
      "functions": 65,
      "lines": 80,
      "statements": 80
    }
  }
}
